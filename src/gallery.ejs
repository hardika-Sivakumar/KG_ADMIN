  <script type="module">
    import { showToast } from '/assets/js/toast.js';
    let galleryImage = undefined;
    let currGalleryId = undefined;
    const BACKEND_URL = "<%= BACKEND_URL %>";

    const deleteModal = document.getElementById("delete-modal");
    const view_details = document.getElementById("view_details");
    const edit_message = document.getElementById("edit_message");

    edit_message.addEventListener("show.bs.modal", function (event) {
      const trigger = event.relatedTarget;
      let galleryData = trigger.getAttribute("data-galleryData");
      galleryData = JSON.parse(galleryData);
      document.getElementById("gallery_title").value =
        galleryData?.gallery_title;
      document.getElementById("gallery_description").value =
        galleryData?.gallery_description;
    });
    view_details.addEventListener("show.bs.modal", function (event) {
      const trigger = event.relatedTarget;
      let galleryData = trigger.getAttribute("data-galleryData");
      galleryData = JSON.parse(galleryData);
      document.getElementById("gallery_title").innerHTML =
        galleryData?.gallery_title;

      document.getElementById("gallery_description").innerHTML =
        galleryData?.gallery_description;

      document.getElementById("gallery_image_uri").src =
        galleryData?.gallery_image_uri;

      document.getElementById("gallery_created_on").innerHTML =
        '<i class="ti ti-calendar me-1"></i>' +
        galleryData?.gallery_created_on;
    });
    deleteModal.addEventListener("show.bs.modal", function (event) {
      const trigger = event.relatedTarget;

      const id = trigger.getAttribute("data-id");

      currGalleryId = id;
    });

    const deleteGallery = async () => {
      if (!currGalleryId) {
        return;
      }
      const deleteGalleryResponse = await fetchWithTimeout(
        `${BACKEND_URL}/gallery/delete_gallery_details?gallery_id=${currGalleryId}`,
        {
          method: "DELETE",
          headers: {
            "Content-Type": "application/json",
          },
        }
      );
      const deleteResponseData = await deleteGalleryResponse.json();

      if (deleteResponseData?.success) {
        location.reload();
      }
    };

    document.addEventListener("DOMContentLoaded", () => {
      const input = document.querySelector('input[type="file"]');
      input.addEventListener("change", async (event) => {
        const file = event.target.files[0];
        if (file) {
          const maxSize = 4 * 1024 * 1024; // 4MB
          if (file.size > maxSize) {
            alert("File size exceeds 4MB.");
            return;
          }
        }
        galleryImage = await uploadFile(file, "/gallery/image", BACKEND_URL);
        if (galleryImage) {
          showToast("secondary", "Image uploaded successfully.");
          return
        }
        showToast("danger", "Failed to upload image.");

      });
    })



    document
      .getElementById("add_gallery")
      .addEventListener("click", async (event) => {
        event.preventDefault();
        const galleryForm = document.getElementById("galleryForm");
        const formData = new FormData(galleryForm);
        let payload = {};
        for (const [key, value] of formData.entries()) {
          payload[key] = value instanceof File ? value.name : value;
        }
        payload["gallery_image_uri"] = galleryImage;

        const saveImageResponse = await fetchWithTimeout(
          `${BACKEND_URL}/gallery/update_gallery_details`,
          {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify(payload),
          }
        );
        const data = await saveImageResponse.json();
        if (!data?.success) {
          //handle error
        }
        showToast("secondary", "Gallery added successfully.");
        galleryImage = undefined;
        location.reload();
      });
  </script>

