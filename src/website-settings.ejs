    <script>
        const BACKEND_URL = "<%= BACKEND_URL %>";
        const eventSettingId = "<%= eventSettingId %>";
        const staffSettingId = "<%= staffSettingId %>";
        let modal_type=undefined
        let image_uri = undefined

        document.querySelectorAll('[data-modal_type]').forEach(button => {
            button.addEventListener('click', function () {
                modal_type = this.dataset.modal_type;
            });
        });
        const handleFileUpload = async (event) => {
            const file = event.target.files[0]
            const reader = new FileReader();
            reader.onload = function (e) {
                const imagePreview = document.getElementById("imagePreview");
                imagePreview.innerHTML = `
            <img src="${e.target.result}" alt="Uploaded Preview" style="max-width: 150px; max-height: 150px;" class="img-thumbnail" />
        `;
            };
            reader.readAsDataURL(file);
            const url = await uploadFile(file, "/settings/website/" + file.name, BACKEND_URL)
            if (!url) {
                alert(url?.message)
                return
            }
            image_uri = url
        }

        async function saveSetting() {
            if(!modal_type) return
            const form = document.getElementById("addForm")
            const formData = new FormData(form)
            let payload = {}
            let renamedPayload = {}
            for (const [key, value] of formData.entries()) {
                payload[key] = value instanceof File ? value.name : value
            }
            if (!image_uri) return

            if (modal_type == "carousel") {
                renamedPayload['home_carousel_title'] = payload?.title
                renamedPayload['home_carousel_description'] = payload?.description
                renamedPayload['home_carousel_image_uri'] = image_uri
                renamedPayload['home_carousel_created_on'] = new Date()
                renamedPayload["type"] = "home_carousel"
            }
            else if (modal_type == "testimonial") {
                renamedPayload["testimonial_person_name"] = payload?.title
                renamedPayload["testimonial_description"] = payload?.description
                renamedPayload["testimonial_image_uri"] = image_uri
                renamedPayload["testimonial_created_on"] = new Date()
                renamedPayload["type"] = "testimonial"
            }


            const saveSettingResponse = await fetchWithTimeout(`${BACKEND_URL}/setting/update_setting_details`, {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify(renamedPayload)
            })
            if (!saveSettingResponse.success) {
                alert(saveSettingResponse.message)
                return
            }
            image_uri = undefined
            //handle success


        }

        async function saveSelection(select_type) {
            const eventSelect = document.getElementById("eventList");
            const staffList = document.getElementById("staffList");
            let payload = {}
            if (select_type == "event") {
                const selectedValues = Array.from(eventSelect.selectedOptions).map(option => option.value);
                payload['event_ids'] = selectedValues
                payload['type'] = "event_info"
                payload['setting_id'] = eventSettingId
            }
            else if (select_type == "staff") {
                const selectedValues = Array.from(staffList.selectedOptions).map(option => option.value);
                payload['staff_ids'] = selectedValues
                payload['type'] = "staff_info"
                payload['setting_id'] = staffSettingId
            }

            const saveSettingResponse = await fetchWithTimeout(`${BACKEND_URL}/setting/update_setting_details`, {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify(payload)
            })
            if (!saveSettingResponse.success) {
                alert(saveSettingResponse.message)
                return
            }
            //handle success

        }
    </script>
