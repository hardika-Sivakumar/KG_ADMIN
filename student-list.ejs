                    document.addEventListener("DOMContentLoaded", function () {
                        const modal = document.getElementById("studentModal");

                        modal.addEventListener("show.bs.modal", function (event) {
                            const trigger = event.relatedTarget;
                            const studentRaw = trigger.getAttribute("data-student");
                            const student = JSON.parse(studentRaw);

                            // Basic Info
                            document.getElementById("modalPhoto").src = student.student_profile_photo || "";
                            document.getElementById("modalName").textContent = `${student.first_name} ${student.last_name}`;
                            document.getElementById("modalId").textContent = student.student_id;
                            document.getElementById("modalGender").textContent = student.gender || "-";
                            document.getElementById("modalDob").textContent = student.date_of_birth || "-";
                            document.getElementById("modalMotherTongue").textContent = student.mother_tongue || "-";
                            document.getElementById("modalReligion").textContent = student.religion || "-";
                            document.getElementById("modalCaste").textContent = student.caste || "-";
                            document.getElementById("modalNotes").textContent = student.other_notes || "-";

                            // Class Info
                            document.getElementById("modalClass").textContent = student.student_class?.class_name || "-";
                            document.getElementById("modalSection").textContent = student.student_class?.section || "-";
                            document.getElementById("modalRoll").textContent = student.student_class?.roll_no || "-";

                            // Parent Info
                            document.getElementById("modalFather").textContent = student.student_parent?.father_name || "-";
                            document.getElementById("modalMother").textContent = student.student_parent?.mother_name || "-";
                            document.getElementById("modalParentContact").textContent = student.student_parent?.parent_contact_no || "-";
                            document.getElementById("modalParentEmail").textContent = student.student_parent?.email || "-";
                            document.getElementById("modalGuardianContact").textContent = student.student_parent?.guardian_contact_no || "-";

                            // Certificate
                            document.getElementById("modalBirthCertificate").href = student.student_birth_certificate || "#";

                            // Status badge
                            const statusBadge = document.getElementById("modalStatus");
                            if (student.student_status) {
                                statusBadge.textContent = "Active";
                                statusBadge.className = "badge bg-success";
                            } else {
                                statusBadge.textContent = "Inactive";
                                statusBadge.className = "badge bg-danger";
                            }
                        });
                    });
