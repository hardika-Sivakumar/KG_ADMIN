    <script>
        const supportedLangs = ['en', 'fr', 'de'];
        let currLang = "en"

        const translations = {
            en: {},
            fr: {},
            de: {}
        };

        // Load all translations
        Promise.all(
            supportedLangs.map(lang =>
                fetch(`locales/${lang}.json`).then(res => res.json()).then(data => {
                    translations[lang] = data;
                })
            )
        ).then(() => {
            // Init i18next
            i18next.init({
                lng: 'en',
                fallbackLng: 'en',
                resources: {
                    en: { translation: translations.en },
                    fr: { translation: translations.fr },
                    de: { translation: translations.de },
                }
            }, updateContent);

            // Listen to language switcher
            document.getElementById('languageSwitcher').addEventListener('change', e => {
                const selectedLang = e.target.value;
                if (supportedLangs.includes(selectedLang)) {
                    currLang = selectedLang
                    i18next.changeLanguage(selectedLang, updateContent);
                }
            });
        });
        async function loadTranslation(text) {
            if(currLang == "en" || text=="") return text
            const cached = localStorage.getItem(`translation_${text}_${currLang}`);
            if (cached) {
                return JSON.parse(cached); // Use cached translation
            }

            try {
                const response = await fetchWithTimeout(`https://translateapi-omega.vercel.app/api/v1/en/${currLang}/${text}`)
                const data = await response.json();
                if (data?.translation) {
                    localStorage.setItem(`translation_${text}_${currLang}`, JSON.stringify(data?.translation)); // Cache it
                    return data?.translation
                }
                return text;
            } catch (e) {
                return text
            }
        }
        // Update all DOM elements with [data-i18n]
        async function updateContent() {
            document.querySelectorAll('[data-i18n]').forEach(el => {
                const key = el.getAttribute('data-i18n');
                el.innerText = i18next.t(key);
            });

            const carouselTitles = document.querySelectorAll('.title');
            const carouselDescs = document.querySelectorAll('.desc');
            const status = document.querySelectorAll('.status');

            for (const el of status) {
                const original = el.innerText;
                el.innerText = await loadTranslation(original);
            }

            for (const el of carouselTitles) {
                const original = el.innerText;
                el.innerText = await loadTranslation(original);
            }

            for (const el of carouselDescs) {
                const original = el.innerText;
                el.innerText = await loadTranslation(original);
            }
        }

    </script>


