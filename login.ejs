<script>
     const teacherBtn = document.getElementById("teacherBtn");
    const adminBtn = document.getElementById("adminBtn");

    teacherBtn.addEventListener("click", () => {
        teacherBtn.classList.add("btn-primary");
        teacherBtn.classList.remove("btn-outline-light");

        adminBtn.classList.add("btn-outline-light");
        adminBtn.classList.remove("btn-primary");
        document.getElementById("login_type").value="teacher"
    });

    adminBtn.addEventListener("click", () => {
        adminBtn.classList.add("btn-primary");
        adminBtn.classList.remove("btn-outline-light");

        teacherBtn.classList.add("btn-outline-light");
        teacherBtn.classList.remove("btn-primary");
        document.getElementById("login_type").value="admin"
    });
</script>
